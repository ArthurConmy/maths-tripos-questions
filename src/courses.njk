---
pagination:
  data: collections.courses
  size: 1
  alias: course
  filter:
    - all
    - nav
    - post
    - posts
    - questions
    - tagList
  addAllPagesToCollections: true
layout: base.njk
permalink: /courses/{{ course }}/
eleventyComputed:
  title: "{{ course | title }}"
  description: "All posts tagged “{{ course }}”"
---
<h1>{{ course | title }}</h1>

<hr />

{%set rightFloat %}
<div style="float:right"><a href="reversed">[Reverse year order]</a></div>
{% endset %}


{% set group_type = "year" %}

